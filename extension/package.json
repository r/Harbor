{
  "name": "harbor-wasm-extension",
  "version": "0.1.0",
  "private": true,
  "description": "Harbor browser extension - Core platform for AI and MCP capabilities",
  "author": "Raffi Krikorian <raffi.krikorian@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "node build.mjs",
    "build:chrome": "node build.mjs --chrome",
    "build:safari": "node build.mjs --safari",
    "build:all": "npm run build && npm run build:chrome && npm run build:safari",
    "dev": "node build.mjs --watch",
    "dev:chrome": "node build.mjs --watch --chrome",
    "dev:safari": "node build.mjs --watch --safari",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@wasmer/wasi": "latest",
    "@wasmer/wasmfs": "latest",
    "buffer": "latest"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.35",
    "esbuild": "latest",
    "sharp": "latest",
    "typescript": "latest",
    "vitest": "^2.0.0"
  }
}
