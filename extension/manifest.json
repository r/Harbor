{
  "manifest_version": 3,
  "name": "Harbor (WASM MCP)",
  "version": "0.1.0",
  "description": "WASM MCP extension with Web Agents API.",
  "browser_specific_settings": {
    "gecko": {
      "id": "harbor@anthropic.com"
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "nativeMessaging"
  ],
  "omnibox": {
    "keyword": "h"
  },
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/agents/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/agents/injected.js",
        "dist/permission-prompt.html",
        "dist/permission-prompt.js",
        "dist/design-tokens.css",
        "dist/demo-bootstrap.js",
        "demo/*",
        "assets/mcp-time.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Harbor",
    "default_popup": "dist/directory.html"
  },
  "sidebar_action": {
    "default_title": "Harbor",
    "default_panel": "dist/sidebar.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' blob:; worker-src 'self' blob:; object-src 'self'"
  }
}
