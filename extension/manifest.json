{
  "manifest_version": 3,
  "name": "Harbor",
  "version": "0.1.0",
  "description": "Infrastructure extension for AI and MCP capabilities. Provides LLM access and tool execution for other extensions.",
  "browser_specific_settings": {
    "gecko": {
      "id": "harbor@mozilla.org"
    }
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "nativeMessaging"
  ],
  "optional_permissions": [
    "trialML"
  ],
  "omnibox": {
    "keyword": "h"
  },
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/discovery.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/page-chat.js",
        "dist/design-tokens.css",
        "dist/demo-bootstrap.js",
        "dist/js-runtime/builtin-echo-worker.js",
        "demo/*",
        "assets/*",
        "bundled/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon.svg",
    "32": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  },
  "action": {
    "default_title": "Harbor",
    "default_popup": "dist/directory.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg"
    }
  },
  "sidebar_action": {
    "default_title": "Harbor",
    "default_panel": "dist/sidebar.html",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
