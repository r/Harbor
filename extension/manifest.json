{
  "manifest_version": 3,
  "name": "Harbor",
  "version": "0.0.1",
  "description": "Native messaging bridge for Harbor - AI agents with MCP tools",
  "permissions": [
    "nativeMessaging",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://registry.modelcontextprotocol.io/*",
    "https://raw.githubusercontent.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "sidebar_action": {
    "default_title": "Harbor",
    "default_panel": "sidebar.html",
    "default_icon": "icons/harbor-icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["vscode-detector.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["provider-injected.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "harbor@example.com",
      "strict_min_version": "109.0"
    }
  }
}
