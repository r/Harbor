{
  "manifest_version": 3,
  "name": "Web Agents API",
  "version": "0.1.0",
  "description": "Exposes AI capabilities to web pages. Requires Harbor extension.",
  "browser_specific_settings": {
    "safari": {
      "strict_min_version": "16.0"
    }
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/injected.js",
        "dist/permission-prompt.html",
        "dist/permission-prompt.js",
        "dist/design-tokens.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "Web Agents API",
    "default_popup": "dist/sidebar.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    }
  }
}
